
<!-- pages/tabbar/tabbar.wxml -->
<view class="page-container">
  <view class="page {{activeIndex==0 ? 'active' : ''}}">
    <view class="header1">
      <text class="title">充电桩1</text>
    </view>
    <view class="body1">
	<view class="monitor">
		<view class="flex-row">
			<text class="border-right-bottom">充电温度\n{{temperature1}} °C</text>
			<text class="border-bottom">环境湿度\n{{humidity1}} %</text>
		</view>
		<view class="flex-row">
			<text class="border-right-bottom">电流\n{{current1}} A</text>
			<text class="border-bottom">电压\n{{voltage1}} V</text>
		</view>
		<view class="flex-row">
			<text class="border-right-bottom">继电器\n{{key1}} </text>
			<text class="border-bottom">地理位置\n{{1}} </text>
		</view>
    <button class="my-button-1" bindtap="keyon1">开始充电</button>
    <button class="my-button-2" bindtap="keyoff1">结束充电</button>
	</view>
</view>
  </view>
  <view class="page {{activeIndex==1 ? 'active' : ''}}">
