		<view class="flex-row">
			<text class="border-right-bottom">继电器\n{{key2}} </text>
			<text class="border-bottom">地理位置\n{{1}} </text>
		</view>
    <button class="my-button-1" bindtap="keyon2">开始充电</button>
    <button class="my-button-2" bindtap="keyoff2">结束充电</button>
	</view>
</view>
  </view>
