/* pages/tabbar/tabbar.wxss */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
  border-top: 1px solid #ccc;
  display: flex;
  justify-content: space-around;
}

.tabbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tabbar-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 5px;
}

.tabbar-text {
  font-size: 12px;
  color: #666;
}

.page-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 50px;
}

.page {
  width: 100%;
  height: 100%;
  display: none;
}

.page.active {
  display: block;
  background-color: #fff;
}

