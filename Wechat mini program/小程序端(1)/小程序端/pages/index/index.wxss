.monitor {
  width: 80%;
  margin-top: 30px;
  margin-bottom: 60px;
  background-color: white;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 3px 5px 1px gainsboro;
  padding: 3px 0px;
}

.flex-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.flex-row > view {
  width: 50%;
  height: 80px;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}


.flex-row > text {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  flex-shrink: 0;
  height: 80px;
}

